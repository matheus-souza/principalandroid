<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dados_atividade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.gamesapp.principal_android.activity.DadosAtividadeActivity"
    tools:showIn="@layout/activity_dados_atividade">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_nome_atividade_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:text="Descrição:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_nome_atividade_dados"
                android:id="@+id/textView3" />

            <TextView
                android:text="Mussum Ipsum, cacilds vidis litro abertis. Delegadis gente finis, bibendum egestas augue arcu ut est."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_descricao_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_below="@+id/textView3" />

            <TextView
                android:text="Data:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_descricao_dados"
                android:id="@+id/textView4" />

            <TextView
                android:text="25/12/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_data_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="Hora:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_descricao_dados"
                android:id="@+id/textView5" />

            <TextView
                android:text="20:20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_hora_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="Local:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_descricao_dados"
                android:id="@+id/textView6" />

            <TextView
                android:text="Rua Armando Ruschel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_local_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="Pontuação:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_descricao_dados"
                android:id="@+id/textView7" />

            <TextView
                android:text="1º Lugar: 150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_pontuacao_primeiro_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="2º Lugar: 100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_pontuacao_segundo_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="3º Lugar: 50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_pontuacao_terceiro_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="Classificação:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/tv_descricao_dados"
                android:id="@+id/textView8" />

            <TextView
                android:text="1º Lugar: Turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_classificacao_primeiro_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="2º Lugar: Turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_classificacao_segundo_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="3º Lugar: Turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView4"
                android:id="@+id/tv_classificacao_terceiro_dados"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
